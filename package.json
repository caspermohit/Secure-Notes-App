{
  "name": "secure-notes-manager",
  "version": "1.0.0",
  "scripts": {
    "build": "./build.sh",
    "start": "php artisan serve --host=0.0.0.0 --port=$PORT",
    "dev": "concurrently \"php artisan serve --host=0.0.0.0 --port=8000\" \"cd frontend && npm start\"",
    "dev:backend": "php artisan serve --host=0.0.0.0 --port=8000",
    "dev:frontend": "cd frontend && npm start"
  },
  "engines": {
    "node": "22.16.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
